<Window x:Class="QuanLyXeKhach.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyXeKhach"
        
        xmlns:Chart="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"   
        xmlns:uccb="clr-namespace:QuanLyXeKhach.UserControlFolder"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        DataContext="{StaticResource MainVM}"
        ResizeMode="NoResize"
        WindowStyle="None" WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Name="MainWd"
 
        Title="Quản Lý Nhà Xe Khách" Height="720" Width="1000">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction CommandParameter="{Binding ElementName=MainWd}" Command="{Binding LoadedWindowCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition ></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <uccb:ControlBarUC Tag="{Binding Title, ElementName=MainWd}"></uccb:ControlBarUC>
        </Grid>
        <!--Tab Control-->
        <Grid Grid.Row="1" >
            <TabControl
                    materialDesign:ColorZoneAssist.Background="#25b24a"
                    materialDesign:ColorZoneAssist.Foreground="White"
                    materialDesign:ColorZoneAssist.Mode="Custom"
                    Style="{StaticResource MaterialDesignFilledTabControl}"
                    TabStripPlacement="Left" Background="#25b24a">
                <!--Account-->
                <TabItem Width="220" MinHeight="70">
                    <TabItem.Header>
                        <Border>
                            <Grid Width="180" Height="60">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <materialDesign:PackIcon Kind="Account" Width="50" Height="50" VerticalAlignment="center" 
                                    HorizontalAlignment="Left" Foreground="White"/>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <StackPanel VerticalAlignment="Center" >
                                        <TextBlock Text="{Binding FullName}" HorizontalAlignment="Center" FontSize="13" Foreground="white"></TextBlock>
                                        <TextBlock Text="{Binding Role}" HorizontalAlignment="Center" FontSize="13" Margin="0 10" Foreground="White"></TextBlock>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>
                    </TabItem.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.8*"></RowDefinition>
                            <RowDefinition Height="0.7*"></RowDefinition>
                            <RowDefinition Height="0.7*"></RowDefinition>
                            <RowDefinition Height="3.5*"></RowDefinition>
                            <RowDefinition Height="0.6*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <TextBox BorderBrush="Green"
                             materialDesign:HintAssist.Foreground="Green" Padding="10"
                             VerticalAlignment="Center" Width="300" Background="White"
                             materialDesign:HintAssist.Hint="Họ Tên" Height="40"
                             IsReadOnly="true" Text="{Binding FullName}"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="15"/>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <TextBox BorderBrush="Green" Text="{Binding UserName}"
                                 materialDesign:HintAssist.Foreground="Green" Padding="12"
                                 VerticalAlignment="Center" Width="300" Background="White"
                                 IsReadOnly="true"
                                 materialDesign:HintAssist.Hint="Tên Tài Khoản" Height="40"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="15"/>
                            </Grid>
                            <Grid Grid.Column="1">
                                <TextBox BorderBrush="Green"
                                 materialDesign:HintAssist.Foreground="Green" Padding="12"
                                 VerticalAlignment="Center" Width="300" Background="White"
                                 IsReadOnly="true" Text="{Binding Role}"
                                 materialDesign:HintAssist.Hint="Chức vụ" Height="40"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="15"/>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <TextBox BorderBrush="Green"
                                 materialDesign:HintAssist.Foreground="Green" Padding="12"
                                 VerticalAlignment="Center" Width="300" Background="White"
                                 IsReadOnly="true" Text="{Binding HashPass,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Mật khẩu" Height="40"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="15"/>
                            </Grid>
                            <Grid Grid.Column="1">
                                <TextBox BorderBrush="Green" Text="{Binding SDT}"
                                 materialDesign:HintAssist.Foreground="Green" Padding="12"
                                 VerticalAlignment="Center" Width="300" Background="White"
                                 IsReadOnly="true"
                                 materialDesign:HintAssist.Hint="Số Điện Thoại" Height="40"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="15"/>
                            </Grid>

                        </Grid>
                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" BorderThickness="1" BorderBrush="Black" CornerRadius="15"
                     Margin="15">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="0.6*"></RowDefinition>
                                        <RowDefinition Height="1*"></RowDefinition>
                                        <RowDefinition Height="1*"></RowDefinition>
                                        <RowDefinition Height="1*"></RowDefinition>
                                        <RowDefinition Height="0.6*"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <TextBlock Text="Đổi Mật Khẩu" FontSize="15" TextAlignment="Center" Padding="0 10"></TextBlock>
                                    </Grid>
                                    <Grid Grid.Row="1">
                                        <StackPanel >
                                            <PasswordBox BorderBrush="Green" Margin="15 0"
                                                  VerticalAlignment="Top" x:Name="OldPass"
                                                  materialDesign:HintAssist.Hint="Nhập Mật Khẩu cũ"
                                                  Style="{StaticResource MaterialDesignOutlinedPasswordBox}">
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="PasswordChanged">
                                                        <i:InvokeCommandAction CommandParameter="{Binding ElementName=OldPass}" Command="{Binding OldPasswordChangedCommand}"/>
                                                    </i:EventTrigger>
                                                    <i:EventTrigger EventName="GotFocus">
                                                        <i:InvokeCommandAction  Command="{Binding OldPasswordEmpty}"/>
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </PasswordBox>
                                            <TextBlock Text="{Binding ErrorMessageOldPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                            VerticalAlignment="Bottom" Foreground="red" TextAlignment="Center"></TextBlock>
                                        </StackPanel>
                                    </Grid>
                                    <Grid Grid.Row="2">
                                        <PasswordBox BorderBrush="Green" Margin="15 0"
                                            VerticalAlignment="Top" x:Name="Pass1"
                                            materialDesign:HintAssist.Hint="Nhập Mật Khẩu mới"
                                            Style="{StaticResource MaterialDesignOutlinedPasswordBox}">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="PasswordChanged">
                                                    <i:InvokeCommandAction CommandParameter="{Binding ElementName=Pass1}" Command="{Binding Password1ChangedCommand}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </PasswordBox>
                                    </Grid>
                                    <Grid Grid.Row="3">
                                        <StackPanel>
                                            <PasswordBox BorderBrush="Green" Margin="15 0"
                                                  VerticalAlignment="Top" x:Name="Pass2"
                                                  materialDesign:HintAssist.Hint="Nhập Lại Mật Khẩu mới"
                                                  Style="{StaticResource MaterialDesignOutlinedPasswordBox}">
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="PasswordChanged">
                                                        <i:InvokeCommandAction CommandParameter="{Binding ElementName=Pass2}" Command="{Binding Password2ChangedCommand}"/>
                                                    </i:EventTrigger>
                                                    <i:EventTrigger EventName="GotFocus">
                                                        <i:InvokeCommandAction  Command="{Binding PasswordEmpty}"/>
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </PasswordBox>
                                            <TextBlock Text="{Binding ErrorMessagePassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                VerticalAlignment="Bottom" Foreground="red" TextAlignment="Center"></TextBlock>
                                        </StackPanel>
                                    </Grid>
                                    <Grid Grid.Row="4">
                                        <Button Content="Xác Nhận" Width="100" HorizontalAlignment="Center"
                                        Background="Green" BorderBrush="Green" Command="{Binding ConfirmPass}" CommandParameter="{Binding ElementName=MainWd}">
                                        </Button>
                                    </Grid>
                                </Grid>
                            </Border>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"></RowDefinition>
                                    <RowDefinition Height="1*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" BorderThickness="1" BorderBrush="Black" CornerRadius="15"
                                    Margin="15">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="0.5*"></RowDefinition>
                                            <RowDefinition Height="1*"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <TextBlock Text="Thêm Tài Khoản" FontSize="15" TextAlignment="Center" Padding="0 10"></TextBlock>
                                        </Grid>
                                        <Grid Grid.Row="1">
                                            <Button Content="Thêm Tài Khoản" Width="200" HorizontalAlignment="Center"
                                            Background="Green" BorderBrush="Green" Command="{Binding AddAccountCommand}">
                                            </Button>
                                        </Grid>
                                    </Grid>
                                </Border>

                            </Grid>
                        </Grid>
                        <Grid Grid.Row="4" Margin="0 0 20 20">
                            <Button Content="Đăng Xuất" Width="100" HorizontalAlignment="Right" Command="{Binding LogoutCommand}"
                                    CommandParameter="{Binding ElementName=MainWd}">
                            </Button>
                        </Grid>
                    </Grid>
                </TabItem>
                <!--Home-->
                <TabItem Height="65" IsSelected="True">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal" Width="120">
                            <materialDesign:PackIcon Kind="Home" Height="25" Width="25" VerticalAlignment="Center" Margin="0 0 7 0"/>
                            <TextBlock Foreground="White" Text="Trang Chủ" VerticalAlignment="Bottom"></TextBlock>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <Image Source="/Image/Home.jpg" Stretch="Uniform"></Image>
                    </Grid>
                </TabItem>
                <!--Clients-->
                <TabItem Height="65">
                    <TabItem.Header >
                        <StackPanel Orientation="Horizontal" Width="120" >
                            <materialDesign:PackIcon Kind="AccountMultiple" Height="25" 
                                 Width="25" VerticalAlignment="Center" Margin="0 0 7 0"/>
                            <TextBlock Foreground="White" Text="Hành khách" VerticalAlignment="Bottom"></TextBlock>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.8*"></RowDefinition>
                            <RowDefinition Height="5*"></RowDefinition>
                            <RowDefinition Height="0.6*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <!--Search-->
                        <Grid Grid.Column="0" Background="#eeeeee">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  
                                VerticalAlignment="Bottom"  >
                                <TextBox BorderBrush="Green" Text="{Binding New.IDBenXe}"
                                    materialDesign:HintAssist.Foreground="Green" Padding="12"
                                    VerticalAlignment="Center" Width="300" Background="White"
                                    materialDesign:HintAssist.Hint="Tên Hành Khách" Height="40"
                                    x:Name="STenHK"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="15"/>
                                <TextBox BorderBrush="Green" Text="{Binding New.IDBenXe}"
                                    materialDesign:HintAssist.Foreground="Green" Padding="12"
                                    VerticalAlignment="Center" Width="300" Background="White"
                                    materialDesign:HintAssist.Hint="Mã Hành Khách" Height="40"
                                    x:Name="SMaHK"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="15"/>
                                <Button Content="Tìm Kiếm" Margin="0 0 15 0"
                                        Command="{Binding SearchClient}" CommandParameter="{Binding ElementName=MainWd}">

                                </Button>
                            </StackPanel>
                        </Grid>
                        <!--List-->
                        <Border Grid.Row="1" Margin="20,20,20,20" CornerRadius="10"  
                            BorderBrush="Black" BorderThickness="1" Background="White" >
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.3"></DropShadowEffect>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <!--Title-->
                                <TextBlock Grid.Row="0" Text="Danh sách hành khách" Margin="10 10 0 0" FontSize="16" Foreground="Gray"></TextBlock>
                                <Border Grid.Row="1" Height="3" Margin="10" Background="#eeeeee"></Border>
                                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                                    <StackPanel x:Name="ucContainerClient">

                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                        <!--Buttons-->
                        <Grid Grid.Row="2" Margin="0,0,0,20">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <!--Add-->
                                <Button Width="100" Margin="20 0" Command="{Binding AddClientCommand}" CommandParameter="{Binding ElementName=ucContainerClient}"
                                    Content="Thêm" Foreground="White" Background="#08c424" BorderBrush="#08c424"
                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                    Style="{StaticResource MaterialDesignRaisedLightButton}"
                                    ToolTip="Resource name: MaterialDesignRaisedLightButton" />
                                <!--Edit-->
                                <Button Width="100" Margin="20 0" Command="{Binding EditClientCommand}" CommandParameter="{Binding ElementName=MainWd}"
                                     Content="Sửa" Foreground="White" Background="#44b0f1" BorderBrush="#44b0f1"
                                     IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                     Style="{StaticResource MaterialDesignRaisedLightButton}"
                                     ToolTip="Resource name: MaterialDesignRaisedLightButton" />
                                <!--Delete-->
                                <Button Width="100" Margin="20 0" Command="{Binding DeleteClientCommand}" CommandParameter="{Binding ElementName=MainWd}"
                                     Content="Xóa" Foreground="White" Background="OrangeRed" BorderBrush="OrangeRed"
                                     IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                     Style="{StaticResource MaterialDesignRaisedLightButton}"
                                     ToolTip="Resource name: MaterialDesignRaisedLightButton" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </TabItem >
                <!--Driver-->
                <TabItem Height="65">
                    <TabItem.Header >
                        <StackPanel Orientation="Horizontal" Width="120" >
                            <materialDesign:PackIcon Kind="AccountTieHat" Height="25" Width="25" VerticalAlignment="Center" Margin="0 0 7 0"/>
                            <TextBlock Foreground="White" Text="Tài xế" VerticalAlignment="Bottom"></TextBlock>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.8*"></RowDefinition>
                            <RowDefinition Height="5*"></RowDefinition>
                            <RowDefinition Height="0.6*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <!--Search-->
                        <Grid Grid.Column="0" Background="#eeeeee">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  
                                VerticalAlignment="Bottom"  >
                                <TextBox BorderBrush="Green" Text="{Binding New.IDBenXe}"
                                    materialDesign:HintAssist.Foreground="Green" Padding="12"
                                    VerticalAlignment="Center" Width="600" Background="White"
                                    materialDesign:HintAssist.Hint="Tên Tài Xế" Height="40"
                                    x:Name="STenTX"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="15"/>
                                <Button Content="Tìm Kiếm" Margin="0 0 15 0"
                                Command="{Binding SearchDriver}" CommandParameter="{Binding ElementName=MainWd}">

                                </Button>
                            </StackPanel>
                        </Grid>
                        <!--List-->
                        <Border Grid.Row="1" Margin="20" CornerRadius="10" 
                            BorderBrush="Black" BorderThickness="1" Background="White">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.3"></DropShadowEffect>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <!--Title-->
                                <TextBlock Grid.Row="0" Text="Danh sách tài xế" Margin="10 10 0 0" FontSize="16" Foreground="Gray"></TextBlock>
                                <Border Grid.Row="1" Height="3" Margin="10" Background="#eeeeee"></Border>
                                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                                    <StackPanel x:Name="ucContainerDriver">

                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                        <!--Buttons-->
                        <Grid Grid.Row="2" Margin="0 0 0 20">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <!--Add-->
                                <Button Width="100" Margin="20 0" Command="{Binding AddDriverCommand}"
                                Content="Thêm" Foreground="White" Background="#08c424" BorderBrush="#08c424" CommandParameter="{Binding ElementName=ucContainerDriver}"
                                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                Style="{StaticResource MaterialDesignRaisedLightButton}"
                                ToolTip="Resource name: MaterialDesignRaisedLightButton" />
                                <!--Edit-->
                                <Button Width="100" Margin="20 0" Command="{Binding EditDriverCommand}" CommandParameter="{Binding ElementName=MainWd}"
                                 Content="Sửa" Foreground="White" Background="#44b0f1" BorderBrush="#44b0f1"
                                 IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                 Style="{StaticResource MaterialDesignRaisedLightButton}"
                                 ToolTip="Resource name: MaterialDesignRaisedLightButton" />
                                <!--Delete-->
                                <Button Width="100" Margin="20 0" Command="{Binding DeleteDriverCommand}" CommandParameter="{Binding ElementName=MainWd}"
                                 Content="Xóa" Foreground="White" Background="OrangeRed" BorderBrush="OrangeRed"
                                 IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                 Style="{StaticResource MaterialDesignRaisedLightButton}"
                                 ToolTip="Resource name: MaterialDesignRaisedLightButton" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </TabItem>
                <!--Staff-->
                <TabItem Height="65">
                    <TabItem.Header >
                        <StackPanel Orientation="Horizontal" Width="120" >
                            <materialDesign:PackIcon Kind="ClipboardAccount" Height="25" 
                                Width="25" VerticalAlignment="Center" Margin="0 0 7 0"/>
                            <TextBlock Foreground="White" Text="Phụ xe" VerticalAlignment="Bottom"></TextBlock>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.8*"></RowDefinition>
                            <RowDefinition Height="5*"></RowDefinition>
                            <RowDefinition Height="0.6*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <!--Search-->
                        <Grid Grid.Column="0" Background="#eeeeee">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  
                                VerticalAlignment="Bottom"  >
                                <TextBox BorderBrush="Green" Text="{Binding New.IDBenXe}"
                                materialDesign:HintAssist.Foreground="Green" Padding="12"
                                VerticalAlignment="Center" Width="600" Background="White"
                                materialDesign:HintAssist.Hint="Tên Phụ Xe" Height="40" 
                                x:Name="STenPX"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="15"/>
                                <Button Content="Tìm Kiếm" Margin="0 0 15 0"
Command="{Binding SearchStaff}" CommandParameter="{Binding ElementName=MainWd}">

                                </Button>
                            </StackPanel>
                        </Grid>
                        <!--List-->
                        <Border Grid.Row="1" Margin="20" CornerRadius="10" 
                            BorderBrush="Black" BorderThickness="1" Background="White">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.3"></DropShadowEffect>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <!--Title-->
                                <TextBlock Grid.Row="0" Text="Danh sách phụ xe" Margin="10 10 0 0" FontSize="16" Foreground="Gray"></TextBlock>
                                <Border Grid.Row="1" Height="3" Margin="10" Background="#eeeeee"></Border>
                                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                                    <StackPanel x:Name="ucContainerStaff">

                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                        <!--Buttons-->
                        <Grid Grid.Row="2" Margin="0 0 0 20">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <!--Add-->
                                <Button Width="100" Margin="20 0" Command="{Binding AddStaffCommand}" CommandParameter="{Binding ElementName=ucContainerStaff}"
                                    Content="Thêm" Foreground="White" Background="#08c424" BorderBrush="#08c424"
                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                    Style="{StaticResource MaterialDesignRaisedLightButton}"
                                    ToolTip="Resource name: MaterialDesignRaisedLightButton" />
                                <!--Edit-->
                                <Button Width="100" Margin="20 0" Command="{Binding EditStaffCommand}" CommandParameter="{Binding ElementName=MainWd}"
                                     Content="Sửa" Foreground="White" Background="#44b0f1" BorderBrush="#44b0f1"
                                     IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                     Style="{StaticResource MaterialDesignRaisedLightButton}"
                                     ToolTip="Resource name: MaterialDesignRaisedLightButton" />
                                <!--Delete-->
                                <Button Width="100" Margin="20 0" Command="{Binding DeleteStaffCommand}" CommandParameter="{Binding ElementName=MainWd}"
                                     Content="Xóa" Foreground="White" Background="OrangeRed" BorderBrush="OrangeRed"
                                     IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                     Style="{StaticResource MaterialDesignRaisedLightButton}"
                                     ToolTip="Resource name: MaterialDesignRaisedLightButton" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </TabItem >
                <!--Cashier-->
                <TabItem Height="65">
                    <TabItem.Header >
                        <StackPanel Orientation="Horizontal" Width="120" >
                            <materialDesign:PackIcon Kind="AccountTieWoman" Height="25" 
                                Width="25" VerticalAlignment="Center" Margin="0 0 7 0"/>
                            <TextBlock Foreground="White" Text="Thu ngân" VerticalAlignment="Bottom"></TextBlock>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.8*"></RowDefinition>
                            <RowDefinition Height="5*"></RowDefinition>
                            <RowDefinition Height="0.6*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <!--Search-->
                        <Grid Grid.Column="0" Background="#eeeeee">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  
                                VerticalAlignment="Bottom"  >
                                <TextBox BorderBrush="Green" Text="{Binding New.IDBenXe}"
                                materialDesign:HintAssist.Foreground="Green" Padding="12"
                                VerticalAlignment="Center" Width="600" Background="White"
                                materialDesign:HintAssist.Hint="Tên Thu Ngân" Height="40" 
                                x:Name="STenTN"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="15"/>
                                <Button Content="Tìm Kiếm" Margin="0 0 15 0"
                                Command="{Binding SearchCashier}" CommandParameter="{Binding ElementName=MainWd}">
                                </Button>
                            </StackPanel>
                        </Grid>
                        <!--List-->
                        <Border Grid.Row="1" Margin="20" CornerRadius="10" 
                            BorderBrush="Black" BorderThickness="1" Background="White">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.3"></DropShadowEffect>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <!--Title-->
                                <TextBlock Grid.Row="0" Text="Danh sách thu ngân" Margin="10 10 0 0" FontSize="16" Foreground="Gray"></TextBlock>
                                <Border Grid.Row="1" Height="3" Margin="10" Background="#eeeeee"></Border>
                                <!--ListView-->
                                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                                    <StackPanel x:Name="ucContainerCashier">
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                        <!--Buttons-->
                        <Grid Grid.Row="2" Margin="0 0 0 20">
