                                    </Grid>
                                </materialDesign:Card>
                            </Grid>
                        </TabItem>
                        <!--Thong ke tuyen xe-->
                        <TabItem Height="50">
                            <TabItem.Header >
                                <TextBlock Text="Thống Kê Tuyến Xe">

                                </TextBlock>
                            </TabItem.Header>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="6*"></RowDefinition>
                                    <RowDefinition Height="6*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" HorizontalAlignment="center" Margin="0 20 0 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition ></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox Grid.Column="0" BorderBrush="#258db2" SelectedValue="{Binding yearz}"
                                    Width="150"
                                    materialDesign:HintAssist.Foreground="#258db2" ItemsSource="{Binding Years}"
                                    materialDesign:HintAssist.Hint="Năm"
                                    Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="SelectionChanged">
                                                <i:InvokeCommandAction Command="{Binding ChangeTopYear}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </ComboBox>
                                    <ComboBox BorderBrush="#258db2" SelectedValue="{Binding month}"
                                    Width="150" Grid.Column="1"
                                    Margin="20,0,0,0"
                                    materialDesign:HintAssist.Foreground="#258db2" ItemsSource="{Binding Months}"
                                    materialDesign:HintAssist.Hint="Tháng"
                                    Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="SelectionChanged">
                                                <i:InvokeCommandAction Command="{Binding ChangeTopMonth}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </ComboBox>
                                </Grid>
                                <materialDesign:Card Grid.Row="1" Margin="10">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <!--Title-->
                                        <TextBlock Grid.Row="0" Text="Danh sách top 5 các tuyến xe được đi nhiều nhất" Margin="10 10 0 0" FontSize="16" Foreground="Gray"></TextBlock>
                                        <Border Grid.Row="1" Height="3" Margin="10" Background="#eeeeee"></Border>
                                        <ListView Grid.Row="2" Margin="10 5" ItemsSource="{Binding TopListRoute, UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}">
                                            <ListView.View>
                                                <GridView>
                                                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID}"/>
                                                    <GridViewColumn Header="Bến xuất phát"  DisplayMemberBinding="{Binding BenDau}"/>
                                                    <GridViewColumn Header="Bến đích đến"  DisplayMemberBinding="{Binding BenCuoi}"/>
                                                    <GridViewColumn Header="Giờ xuất phát"  DisplayMemberBinding="{Binding tgxp}"/>
                                                    <GridViewColumn Header="Thời gian dự kiến" DisplayMemberBinding="{Binding tgdk}"/>
                                                    <GridViewColumn Header="Số lượng" DisplayMemberBinding="{Binding count}"/>
                                                </GridView>
                                            </ListView.View>
                                        </ListView>
                                    </Grid>
                                </materialDesign:Card>
                                <materialDesign:Card Grid.Row="2" Margin="10">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <!--Title-->
                                        <TextBlock Grid.Row="0" Text="Danh sách top 5 các tuyến xe nhiều khách nhất" Margin="10 10 0 0" FontSize="16" Foreground="Gray"></TextBlock>
                                        <Border Grid.Row="1" Height="3" Margin="10" Background="#eeeeee"></Border>
                                        <ListView Grid.Row="2" Margin="10 5" ItemsSource="{Binding TopListRouteHK, UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}">
                                            <ListView.View>
                                                <GridView>
                                                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID}"/>
                                                    <GridViewColumn Header="Bến xuất phát"  DisplayMemberBinding="{Binding BenDau}"/>
                                                    <GridViewColumn Header="Bến đích đến"  DisplayMemberBinding="{Binding BenCuoi}"/>
                                                    <GridViewColumn Header="Giờ xuất phát"  DisplayMemberBinding="{Binding tgxp}"/>
                                                    <GridViewColumn Header="Thời gian dự kiến" DisplayMemberBinding="{Binding tgdk}"/>
                                                    <GridViewColumn Header="Số lượng" DisplayMemberBinding="{Binding countGhe}"/>
                                                </GridView>
                                            </ListView.View>
                                        </ListView>
                                    </Grid>
                                </materialDesign:Card>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
